   ICKCENT = 17,           ! K center for ICVERT=2 (ignored for ICVERT=1)
   CDIVMAX = -6.1224e-6,   ! Divergence amplitude (s^-1) (negative = convergence)
   CTAU    = 1.,           ! timescale (s) over which conv. zone strength
