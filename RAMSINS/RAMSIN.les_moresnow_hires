!----- Non-standard lateral boundary forcing -----------------------------

   IAEROLBC   = 0,0,0,       ! Aerosol profile forcing: 0=no, 1=yes
   ICO2LBC    = 0,0,0,       ! CO2 profile forcing: 0=no, 1=yes
   BCTAU      = 1.,1.,1.,    ! (seconds) Inverse time weight

